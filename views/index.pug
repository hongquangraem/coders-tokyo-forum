    nav.nav.fixed-top
      ul
        li.logo-item
          a.logo-link-item(href='#')
            img.logo(src='/images/logo.png', alt='')
        li
          a.coders-tokyo(href='/') Coders.Tokyo
        li
          a(href='./users') Admin
        li
          a(href='./rank') Rank
        li
          a(href='./stream') Stream
        if !user
          li(style='flex-grow:1')
            a(href='/users/' + userId + '/books') Closet
        else 
          li
            a(href='/users/' + userId + '/books') Closet
        if user
          li.user-name
            a.user-name(style='color: #fff')= user.name
          li(style='flex-grow: 1')
