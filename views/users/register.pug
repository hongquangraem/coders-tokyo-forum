html
    head 
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
        <link rel="stylesheet" href="/styles/style.css">
    body

    nav.nav.fixed-top
      ul
          li.logo-item
              a.logo-link-item(href='#')
                  img.logo(src='/images/logo.png', alt='')
          li
              a.coders-tokyo(href='/') Coders.Tokyo
          li
              a(href='/users') Admin
          li
              a(href='/rank') Rank
          li
              a(href='/stream') Stream
          li
              a(href='/users/' + userId + '/books') Closet


    .container.pt-4.main(style='height: 800px')
      block content
          
          if errors
              each error in errors
                  .alert.alert-danger #{error}

          .form-input.border.p-4.rounded
            h1.text-center Register
            form(action="/register" method="POST" enctype="multipart/form-data")
              .form-row
                .form-group.col-md-6
                  label(for='name' required) Name
                  input#inputName.form-control(name='name', type='name', value= values? values.name : "", placeholder='Name' autofocus)
              .form-row
                .form-group.col-md-6
                  label(for='email' required) Email
                  .input-group-prepend
                    .input-group-text @
                    input#inputEmail.form-control(name='email', type='email', placeholder='Email', value= values? values.email : "", )
                .form-group.col-md-6
                  label(for='inputPassword') Password
                  input#password.form-control(name='password', type='password', placeholder='Password')
              .form-row
                .form-group.col-md-6
                  label(for='confirmPassword' required) Comfirm Password
                  input#confirm_password.form-control(name= 'confirmPassword', type='password', placeholder='Confirm Password')
                .form-group.col-md-6
                  label(for='avatar' required) Avatar
                  .input-group-prepend
                    span.input-group-text Upload
                    .custom-file
                      input.custom-file-input(name='avatar', type='file')
                      label.custom-file-label(for='chooseFile') Choose file

              button.btn.btn-primary(type='submit') Register
              input.btn.btn-danger.ml-3(type='reset')


          script.
            var password = document.getElementById("password");
            var confirm_password = document.getElementById("confirm_password");
            function validatePassword() {
              if(password.value != confirm_password.value) {
                confirm_password.setCustomValidity("Passwords Don't Match");
            } else {
              confirm_password.setCustomValidity('');
              }
            }
            password.onchange = validatePassword;
            confirm_password.onkeyup = validatePassword;

