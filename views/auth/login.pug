html
    head 
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
        <link rel="stylesheet" href="/styles/style.css">
    body

    nav.nav.fixed-top
      ul
        li.logo-item
          a.logo-link-item(href='#')
            img.logo(src='/images/logo.png', alt='')
        li
          a.coders-tokyo(href='/') Coders.Tokyo
        li
          a(href='/users') Admin
        li
          a(href='../rank') Rank
        li
          a(href='../stream') Stream
        li.closet
            a(href='../auth/login') Closet
        li
            a.login(href='./login') Login

    .container.p-0.d-flex.justify-content-center.align-items-center.flex-column.main(style='height: 800px')
        block content
            .login.d-flex.flex-column
                .errors(style="position: absolute; top: 75px")
                    if errors
                        each error in errors
                            .alert.alert-danger #{error}
                form.login-form(action="/auth/login" method="POST" accept-charset='utf-8')
                  img.avatar(src='/images/logo.png', alt='')
                  p.title coders.tokyo
                  .input
                    input#email(name="email" type='text' class="ml-2" value= values? values.email : "" required='')
                    label(for='email') Email
                  .input
                    input#password(name="password" type='password' class="ml-1" value= values? values.password : "" required='')
                    label(for='password') Password
                  button.login-button(type='submit' class="btn btn-primary") Login
                  p.sign-up
                    | Don&apos;t have an account? 
                    a.signUp(href='/register', title='Signup') Sign up


            
